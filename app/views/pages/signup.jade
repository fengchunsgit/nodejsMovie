extends ../layout

block content
  .container
    .row
      .col-md-5
        form(method="post",action="/user/signup")
          .modal-body
            .form-group
              label(for="sigupName") 用户名
              input#signupName.form-control(name="user[name]",type='text')
            .form-group
              label(for="sigupPassword") 密码
              input#sigupPassword.form-control(name="user[password]",type='password')
            .modal-footer
              button.btn.btn-default(type="button",data-dismiss="modal") 关闭
              button.btn.btn-success(type="submit") 提交